{
  "name": "Web Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.vscode-pull-request-github",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "github.vscode-github-actions",
        "usernamehw.errorlens",
        "Gruntfuggly.todo-tree",
        "christian-kohler.path-intellisense",
        "DavidAnson.vscode-markdownlint",
        "yzhang.markdown-all-in-one",
        "dbaeumer.vscode-eslint",
        "stylelint.vscode-stylelint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "rust-lang.rust-analyzer",
        "GraphQL.vscode-graphql",
        "Vue.volar",
        "hashicorp.terraform",
        "fill-labs.dependi"
      ]
    }
  },
  "forwardPorts": [
    10000
  ],
  "features": {
    "ghcr.io/devcontainers-extra/features/starship": {},
    "ghcr.io/devcontainers/features/github-cli": {},
    "ghcr.io/devcontainers/features/aws-cli": {},
    "ghcr.io/devcontainers/features/node": {},
    "ghcr.io/devcontainers-extra/features/zig": {},
    "ghcr.io/devcontainers/features/rust": {},
    "./features/cargo-binstall": {},
    "ghcr.io/devcontainers/features/terraform": {}
  },
  "postCreateCommand": "echo 'eval \"$(starship init bash)\"' >> ~/.bashrc",
  "mounts": [
    "type=bind,source=${localEnv:HOME}/.aws/,target=/home/vscode/.aws/"
  ],
  "containerEnv": {
    "AWS_PROFILE": "web"
  }
}